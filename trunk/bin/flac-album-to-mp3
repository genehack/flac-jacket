#! /bin/bash

FLAC=/usr/bin/flac
LAME=/usr/bin/lame
RM=/bin/rm

if [ ! -e $FLAC ]; then
    echo "No $FLAC!"
    exit 1
fi

if [ ! -e $LAME ]; then
    echo "No $LAME!"
    exit 2
fi

if [ ! -e $RM ]; then
    echo "No $RM ?!"
    exit 3
fi

for i in *.flac ; do  
    if [ -e $i ]; then
        echo $i
        $FLAC -cds $i | $LAME -Sh - ${i%.flac}.mp3
        $RM $i
    fi
done

if [ -e meta ]; then
    touch meta/*.yml
    retag
fi

$RM -rf art meta cover.*

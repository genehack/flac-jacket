#! /usr/bin/perl 

# $Id$
# $URL$

use strict;
use warnings;

use Carp;
use YAML  qw/ LoadFile /;

use FindBin;
use lib "$FindBin::Bin/../lib";
use FlacJacket;

croak "No meta information found\n" unless -d './meta';
croak "No cover art found\n"        unless -e "./cover.jpg";

FlacJacket::RetagCurrentDirectory();

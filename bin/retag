#! /opt/perl/bin/perl

use strict;
use warnings;

use Carp;
use Getopt::Std;

use YAML  qw/ LoadFile /;

use FindBin;
use lib "$FindBin::RealBin/../lib";
use FlacJacket;

my( $opt_g , $opt_q );
getopts('gq');

if ( ! -d './meta' ) {
  print STDERR "No meta information found\n" unless $opt_q;
  exit(1);
}

if ( ! -e './cover.jpg' ) {
  print STDERR "No cover art found\n" unless $opt_q;
  exit(2);
}

FlacJacket::RetagCurrentDirectory( $opt_g );

#! /bin/sh
# PODNAME: rsync_media

args=`getopt v $*`

if [ $? != 0 ]; then
    echo "error!"
    exit 2
fi

set -- $args

VERBOSE=""
for i ; do
    case "$i"
        in
        -v)
            VERBOSE="-v";
            shift;;
        --)
            shift; break;;
    esac
done

rsync -auz $VERBOSE --delete --delete-excluded      \
      --exclude .DS_Store                           \
      --exclude .DocumentRevisions-V100             \
      --exclude .Spotlight-V100                     \
      --exclude .TemporaryItems                     \
      --exclude .Trashes                            \
      --exclude .apdisk                             \
      --exclude .com.apple.timemachine.donotpresent \
      --exclude .com.apple.timemachine.supported    \
      --exclude .fseventsd                          \
      --exclude lost+found                          \
  /Volumes/Media/ ferb:/files/media/
